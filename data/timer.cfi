// subroutine-by-subroutine timing info (optional)
// service = SimpleProfiling {}

// Use TimerService if you want to do cpu-/wall-clock-time measurements;
service = TimerService {
  untracked bool useCPUtime = true // set to false for wall-clock-time	
}

// This is the module that stores in the Event the timing info
module myTimer = Timer{
	// whether to include timing info about Timer itself
	untracked bool includeSelf = false		
}

